<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Flipkart Automation Suite" verbose="1"
	parallel="false">


	<test name="AdvertisePageTest">
		<groups>
			<run>
				<include name="advertise" />
			</run>
		</groups>
		<classes>
			<class name="com.flipkart.tests.AdvertisePageTest" />
		</classes>
	</test>
	<test name="CartTest">
		<groups>
			<run>
				<include name="cart" />
			</run>
		</groups>
		<classes>
			<class name="com.flipkart.tests.CartTest" />
		</classes>
	</test>
	<test name="GroceryTest">
