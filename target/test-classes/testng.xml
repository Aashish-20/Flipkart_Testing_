			<run>
				<include name="grocery" />
			</run>
		</groups>
		<classes>
			<class name="com.flipkart.tests.GroceryTest" />
		</classes>
	</test>
	<test name="HelpPageTest">
		<groups>
			<run>
				<include name="help" />
			</run>
		</groups>
		<classes>
			<class name="com.flipkart.tests.HelpPageTest" />
		</classes>
	</test>
	<test name="HomeTest">
		<groups>
			<run>
				<include name="home" />
			</run>
		</groups>
		<classes>
			<class name="com.flipkart.tests.HomeTest" />
		</classes>
	</test>
	<test name="LoginTest">
		<groups>
			<run>
				<include name="login" />
			</run>
		</groups>
		<classes>
			<class name="com.flipkart.tests.LoginTest" />
		</classes>
	</test>
	<test name="SellerRegisterPageTest">
		<groups>
			<run>
				<include name="sellerRegister" />
			</run>
		</groups>
		<classes>
			<class name="com.flipkart.tests.SellerRegisterPageTest" />
		</classes>
	</test>
	<test name="SellerTest">
		<groups>
			<run>
				<include name="seller" />
			</run>
		</groups>
		<classes>
			<class name="com.flipkart.tests.SellerTest" />
		</classes>
	</test>
</suite>